{% extends 'base.html.twig' %}

{% block title %}Hello ListedGenreController!{% endblock %}

{% block body %}

<div class="container">
    <table class="table table-dark table-stripped">
        <thead>
            <tr>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
        {% for genre in genres %}
            <tr>
                <td>{{genre.name}}</td>
                <td> <i class="fa-solid fa-pen"></i></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
