{% extends 'base.html.twig' %}

{% block title %}
    Liste des utilisateurs
{% endblock %}

{% block body %}

    <div class="container">

        <a href="{{path('app_user_create')}}"><button class="btn btn-primary my-5">
            Inscription
        </button></a>

        <table class="table table-dark my-3">
            <thead class="text-center">
                <tr>
                    <th>Pseudo</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="table-striped">
            {% for user in users %}
                <tr>
                    <td class="py-3">{{user.nickname}}</td>
                    <td class="py-3">{{user.name}}</td>
                    <td class="py-3">{{user.email}}</td>
                    <td class="py-3"> <a href="{{ path('app_user_edit', {name:user.name}) }}"><i class="fa-solid fa-pen"></i></a></td>
                </tr>  
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}