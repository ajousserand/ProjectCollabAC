{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}

<div class="text-center container mx-auto">

    <div class="infoContainer my-5">
        <h1> {{user.name}} </h1>
        <p>Pseudo : {{user.nickname}}</p>
    </div>

    <h2>Jeux de {{user.name}}</h2>
    <div class="row my-5">
            {% for library in user.libraries %}
                <div class="col-3">
                    <p>{{library.game.name}}</p>
                    <a href="{{ path('st_games', {slug:library.game.slug}) }}">
                        <div class="cardContainer mx-2 my-4">
                            <div class="imageContainer">
                                <img src="{{library.game.thumbnailCover}}">
                            </div>
                            <p>Temp de jeu: {{librairies.game_time}}</p>
                            <p>Derni√®re partie: {{librairies.lastUsedAt | format_datetime(locale='fr',pattern="dd MMMM YYYY")}} </p>
                        </div>
                    </a>
                </div>
            {% endfor %}
    </div>

</div>

{% endblock %}
