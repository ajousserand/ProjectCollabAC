{% extends 'base.html.twig' %}

{% block title %}{{publisher.name}}{% endblock %}

{% block body %}

<div class="mt-3 container">
{% if publisher %}

    <div class="publisherContainer mx-auto text-center py-4">
        <h1>{{publisher.name}} <img src="{{ publisher.country.urlFlag}}"></h1>        
        <h4> {{nbGames}} jeux</h4>
        <p class="mb-0">Lien vers le site : <a href="{{publisher.website}}" target="_blank">{{publisher.website}}</a></p>
    </div>
    <div class="publisherGameContainer row px-5 py-4 my-3">
    <h3 class="my-5">Jeux de {{publisher.name}} :</h3>
    {% for game in publisher.games %}
        <div class="col-lg-3 col-md-6">
            {% include 'games/cardView.html.twig' %}
        </div>
    {% endfor %}
    </div>


{% else %}
    <p>Pas d'éditeurs correspondant à ce nom<p>
{% endif %}
    
</div>



{% endblock %}