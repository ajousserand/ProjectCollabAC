{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}

<div class="mt-3 container">
{% if publisher %}

    <div class='d-flex align-items-center'>
        <h1>{{publisher.name}} <img src="{{ publisher.country.urlFlag}}"></h1>
        <span class="mx-3"> - </span>
        <h4 class="mb-0"> {{nbGames}} jeux</h4>
    </div>
    <p class="mb-0">Lien vers le site : <a href="{{publisher.website}}" target="_blank">{{publisher.website}}</a></p>
    <h3 class="my-5">Les jeux de {{publisher.name}} :</h3>
    <div class="row">
    {% for game in publisher.games %}
        <div class="col-lg-3 col-md-6 mx-auto">
            {% include 'games/cardView.html.twig' %}
        </div>
    {% endfor %}
    </div>


{% else %}
    <p>Pas d'éditeurs correspondant à ce nom<p>
{% endif %}
    
</div>



{% endblock %}