{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}

<div class="container mx-auto text-center">
{% if publisher %}

    <h1>{{publisher.name}} <img src="{{ publisher.country.urlFlag}}"></h1>
    <p> {{nbGames}} jeux</p>
    <p><a href="{{publisher.website}}" target="_blank">{{publisher.website}}</a></p>
    <h3 class="my-4 text-left">Les jeux de {{publisher.name}} :</h3>
    <div class="row">
    {% for game in publisher.games %}
        <div class="col-lg-3 col-md-6">
            {% include 'games/cardView.html.twig' %}
        </div>
    {% endfor %}
    </div>


{% else %}
    <p>Pas d'éditeurs correspondant à ce nom<p>
{% endif %}
    
</div>



{% endblock %}