{% extends 'base.html.twig' %}

{% block title %}{{gameDetail.name}}{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mt-5 mb-5">{{gameDetail.name}}</h1>
    <div class="row">
        <div class="col-lg-6">
            <div class="thumbContainer px-5">
                <img src="{{gameDetail.thumbNailCover}}">
            </div>
            
        </div>
        <div class="col-lg-6 bg-secondary border border-3 border-dark rounded-3 ">
            <div class="imageContainer">
                <div class="row d-flex justify-content-center mt-5 mb-5 text-center">
                    {% for genre in gameDetail.genres %}
                            <div class="col-lg-1 ">
                                <h3>{{genre.name}}</h3>
                            </div>
                    {% endfor %}
                </div>
                <p class="px-2">{{gameDetail.description}}</p>
                    
                <div class="row d-flex justify-content-center">
                <h3 class="text-center mt-5 mb-5">Langue : </h3>
                    {% for country in gameDetail.countries %}
                        <div class="col-lg-1">
                        <img src="{{country.urlFlag}}">
                        </div>
                    {% endfor %}
                </div>
                    

            </div>
            
        </div>

    </div>
    <h2 class="text-center mt-5 mb-5">Commentaires </h2>
    <div class="row d-flex justify-content-center">
            
                    {% for comment in gameDetail.comments %}
                        <div class="col-lg-12 mt-3 mb-3">
                            {% include 'home/_comment.html.twig' %}
                        </div>
                    {% endfor %}
            </div>
</div>
{% endblock %}
