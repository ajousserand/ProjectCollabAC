{% extends 'base.html.twig' %}

{% block title %}{{gameDetail.name}}{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mt-5 mb-5">{{gameDetail.name}}</h1>
    <div class="row">
        <div class="col-lg-6">
            <div class="thumbContainer px-5">
                <img src="{{gameDetail.thumbNailCover}}">
            </div>
            
        </div>
        <div class="col-lg-6 bg-secondary border border-3 border-dark rounded-3 ">
            
                
                <p class="px-2 mt-5">{{gameDetail.description}}</p>
                    
                <div class="row d-flex justify-content-center mt-5">
                    {% for country in gameDetail.countries %}
                        <div class="col-lg-1">
                        <img src="{{country.urlFlag}}">
                        </div>
                    {% endfor %}
                </div>
                <div class="row mt-5 mb-5">
                    {% for genre in gameDetail.genres %}
                            <div class="col-lg-1 ">
                                
                                    
                                        <button class=" btn btn-warning">
                                            {{genre.name}}
                                        </button>
                                    
                                
                            </div>
                    {% endfor %}
                </div>
                    

            
            
        </div>

    </div>
    <div class ="mt-5 mb-5 d-flex justify-content-around">
        <h2 class="text-center ">Commentaires </h2>
        <button class="btn btn-warning">Voir tout</button>
    </div>
    <div class="row d-flex justify-content-center">
            
                    {% for comment in gameDetail.comments|slice(0,6) %}
                        <div class="col-lg-12 mt-3 mb-3">
                            {% include 'game_detail/_commentDetail.html.twig' %}
                        </div>
                    {% endfor %}
            </div>
</div>
{% endblock %}
