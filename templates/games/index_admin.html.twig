{% extends 'base-front.html.twig' %}

{% block body %}

<div class="container">
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Publisher</th>
                <th>Genre</th>
                <th>Prix</th>
                <th> </th>
                <th> </th>
            </tr>
        </thead>
        <tbody>

            {% for game in games %}
                <tr>
                    <td>{{game.name}}</td>
                    {% if game.publisher %}
                        <td>{{game.publisher.name}}</td>
                    {% else %}
                        <td> Inconnu </td>
                    {% endif %}
                    <td>{% for genre in game.genres %} {{genre.name}} {% endfor %}</td>
                    <td>{{game.price}}â‚¬</td>
                    <td><a href="#"> <i class="fa-solid fa-pen"></i></a></td>
                    <!-- Button trigger modal -->
                    <td><button type="button" class="btn btn-danger" data-bs-toggle="modal"
                            data-bs-target="#modal_{{loop.index}}"><i class="fa-solid fa-trash"></i></button></td>
                    <!-- Modal -->
                    <div class="modal fade" id="modal_{{loop.index}}" tabindex="-1" aria-labelledby="modalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-body text-dark">
                                    Etes vous sur de vouloir supprimer le jeux{{game.name}}?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Retour</button>
                                    <a href="#"
                                        class="btn btn-primary">Oui</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </tr>
            {% endfor %}

        </tbody>

    </table>
</div>

{% endblock %}