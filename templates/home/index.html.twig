{% extends 'base.html.twig' %}

{% block title %}
    Page d'accueil
{% endblock %}


{% block body %}

<div class="container">
    <div class="row">
    <h2 class="my-5"> Nos derniers jeux: </h2>
            
            {% for game in lastPublishedGames  %}
                <div class="col-4">
                    {% include 'games/cardView.html.twig' %}
                </div>
            {% endfor %}
            
    </div>

    <div class="row mx-auto">
    <h2 class="my-5"> Les dernier avis: </h2>
        {% for comment in lastComments  %}
            <div class="my-3">
                <h5><span class="orange">{{comment.account.nickname}}</span> <span style="font-size:1rem"> à jouer à </span> {{comment.game.name}}:</h5>
                <p style="font-weight:bold"> le {{comment.createdAt | date('d/m/Y')}}</p>
                <p>{{comment.content}}</p>
            </div>
        {% endfor %}
    </div>

